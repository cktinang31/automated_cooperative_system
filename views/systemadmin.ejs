<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Admin | <%=title %></title>
        <link rel="stylesheet" href="/systemadnin.css">
    </head>
    <body>


        <div class="container">
            <div class="header"> 
                <h1>COOPERATIVE SYSTEM</h1> 
                <h2>System Admin</h2>

            </div>
            
            <table>
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.user_id %></td>
                            <td><%= user.fname %> <%= user.lname %></td>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                        </tr>
                    <% }) %>
                    <% if (users.length === 0) { %>
                        <tr>
                            <td colspan="4">No users found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            
            
            
           
          

        </div>
                
    
        
       
    </body>
</html>