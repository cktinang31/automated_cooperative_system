<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Application Form | <%=title %></title>
        <link rel="stylesheet" href="/application.css">
    </head>
    <body>

        <!-- <%- include('./partials/nav.ejs') %> -->

        <div class="container">
            <div class="column1">
                <p>"Shared Prosperity, Shared Purpose"</p>
            </div>

            <div class="column2">
                <h1 class="formtitle">CTU-AC Coopperative Application Form</h1>
                <form action="/mem_application" method="POST">
                    <label for="fname">First Name</label>
                    <input type="text" id="fname" name="fname" required placeholder="Juan">

                    
                    <label for="mname">Middle Name:</label>
                    <input type="text" id="mname" name="mname" required placeholder="Dela">
                    
                    <label for="lname">Last Name:</label>
                    <input type="text" id="lname" name="lname" required placeholder="Cruz">
                    
                    <label for="date_of_birth">Date of Birth</label>
                    <input type="date" id="date_of_birth" name="date_of_birth" required>
                    
                    <label for="place_of_birth">Place of Birth</label>
                    <input type="text" id="place_of_birth" name="place_of_birth" required placeholder="Ginatilan, Cebu">
    
                    <label for="address">Address</label>
                    <input type="text" id="address" name="address" require placeholder="Ginatilan, Cebu">
                    
                    <label for="email">Email add:</label>
                    <input type="text" id="email" name="email" required placeholder="juandc@gmail.com">
                    
                    <label for="contact">Contact Number:</label>
                    <input type="tel" id="contact" name="contact" required placeholder="09697210853">
                    
                    <input type="submit" value="Submit">
                </form>
            </div>

        </div>
                
    
        
       
    </body>
</html>