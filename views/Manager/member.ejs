<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../Manager/managerhead.ejs") %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <%- include("../Manager/managerheader.ejs") %>
    <%- include("../Manager/managersidebar.ejs") %>

    <div class="container-page1">
        <table>
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Category</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Contact Number</th>
                </tr>
            </thead>
            <tbody>
                <% if (users && users.length > 0) { %>
                    <% users.forEach(user => { %>
                        <tr data-user-id="<%= user.user_id %>">
                            <td><%= user.user_id %></td>
                            <td>
                                <% if (user.category === 'gold') { %>
                                    <p>Gold</p>
                                <% } else if (user.category === 'silver') { %>
                                    <p>Silver</p>
                                <% } else if (user.category === 'bronze') { %>
                                    <p>Bronze</p>
                                <% } else { %>
                                    <p>New Member</p>
                                <% } %>
                            </td>
                            <td><%= user.fname %> <%= user.lname %></td>
                            <td><%= user.email %></td>
                            <td><%= user.contact %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5">No Members to show.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <style>
        .container-page1 {
            margin-top: 50px;
            margin-left: 15%;
            margin-right: 30px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .container-page1 table {
            width: 100%;
            border-spacing: 0;
            border-collapse: collapse;
            margin-top: 1rem;
        }

        .container-page1 thead {
            background-color: #373F41;
            color: white;
        }

        .container-page1 th {
            padding: 1rem;
            font-size: 16px;
            text-align: left;
            font-weight: bold;
        }

        .container-page1 td {
            padding: 1rem;
            border: 1px solid #dbdbdb;
            border-radius: 8px;
            background-color: #FFFFFF;
            font-size: 14px;
            color: #373F41;
            text-align: left;
        }

        .container-page1 td p {
            margin: 0;
            font-size: 14px;
            font-weight: bold;
            color: #333;
        }

        .container-page1 tr:hover td {
            background-color: #f0f0f0; 
        }

        .container-page1 td p.gold {
            color: gold;
        }

        .container-page1 td p.silver {
            color: silver;
        }

        .container-page1 td p.bronze {
            color: #cd7f32;
        }

        .container-page1 td p.new-member {
            color: #888;
        }

        .container-page1 td[colspan="5"] {
            text-align: center;
            font-size: 18px;
            font-style: italic;
            color: #999;
        }

        .container-page1 tr[data-user-id] {
            cursor: pointer;
        }

        @media (max-width: 768px) {
            .container-page1 table {
                font-size: 12px;
            }

            .container-page1 th, .container-page1 td {
                padding: 0.8rem;
            }

            .container-page1 td p {
                font-size: 12px;
            }
        }
    </style>

    <script>
        document.querySelectorAll('tr[data-user-id]').forEach(row => {
            row.addEventListener('click', function() {
                const userId = this.getAttribute('data-user-id');
                const destinationUrl = '/Manager/membersprofile/' + userId; 
                window.location.href = destinationUrl;
            });
        });
    </script>
</body>
</html>
