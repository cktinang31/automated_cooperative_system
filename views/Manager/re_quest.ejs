<!DOCTYPE html>
<html lang="en">
    <%- include("../Manager/managerhead.ejs") %>
    <link rel="stylesheet" href="/css/re_quest.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <body>
        <%- include("../Manager/managerheader.ejs") %>
        <%- include("../Manager/managersidebar.ejs") %>

        <div class="container">



            <table>
                <thead>
                    <tr>
                        <th>Request ID</th>
                        <th>Request Type</th>
                        <th>Details</th>
                        <th>Date</th>
                    </tr>
                </thead>
                
                <tbody>
                    <% if (requests.length > 0) { %>
                        <% requests.forEach(req => { %>
                            <pre><%= JSON.stringify(req, null, 2) %> </pre>
                            <tr onclick="openModal('<%= req.id %>', 
                                '<%= req.type %>', 
                                '<%= req.fname %>', 
                                '<%= req.lname %>', 
                                '<%= req.details %>', 
                                '<%= req.amount %>', 
                                '<%= req.loantype %>', 
                                '<%= req.interest %>', 
                                '<%= req.date %>', 
                                '<%= req.user_id %>', 
                                '<%= req.loanterm %>', 
                                '<%= req.monthlypayment %>', 
                                '<%= req.numberofpayments %>')">
         
                                <td><%= req.id %></td>
                                <td><%= req.type %></td>
                                <td>
                                    <% if (req.type === 'Application') { %>
                                        <%= req.fname %> <%= req.lname %> has sent a membership request.
                                    <% } else if (req.type === 'Savings Transaction') { %>
                                        <%= req.details %> wants to <%= req.transaction_type %> of Php <%= req.amount %>.00.
                                    <% } else if (req.type === 'CBU Transaction') { %>
                                        <%= req.details %> wants to <%= req.transaction_type %> of Php <%= req.amount %>.00.
                                    <% } else if (req.type === 'Loan Application') { %>
                                        <%= req.details %> has applied for a <%= req.loantype %> loan of Php <%= req.amount %> with <%= req.interest %>% interest.
                                    <% } %>
                                </td>
                                <td><%= new Date(req.date).toLocaleDateString() %></td>
                                <td class="hidden"><%= req.mname || '' %></td>
                                <td class="hidden"><%= req.dob || '' %></td>
                                <td class="hidden"><%= req.pob || '' %></td>
                                <td class="hidden"><%= req.address || '' %></td>
                                <td class="hidden"><%= req.email || '' %></td>
                                <td class="hidden"><%= req.contact || '' %></td>
                                <td class="hidden"><%= req.mode || '' %></td>
                                <td class="hidden"><%= req.user_id || '' %></td>
                                <td class="hidden"><%= req.loanterm || '' %></td>
                                <td class="hidden"><%= req.monthlypayments || '' %></td>
                                <td class="hidden"><%= req.numberofpayments || '' %></td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4">No pending requests</td>
                        </tr>
                    <% } %>
                </tbody>
                
                
            </table>

            <table>
                <thead>
                    <tr>
                        <th>Request ID</th>
                        <th>Request Type</th>
                        <th>Details</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr onclick="openModal();">
                        <td>0069</td>
                        <td>Membership</td>
                        <td>Ariel Berongan has...</td>
                        <td>09-11-24</td>
                    </tr>
                </tbody>
                <tbody>
