<!DOCTYPE html>
<html lang="en">
    <%- include("../Manager/managerhead.ejs") %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <body>
        <%- include("../Manager/managerheader.ejs") %>
        <%- include("../Manager/managersidebar.ejs") %>
        <div class="container">
            <div class="form-container">
                <form id="create-announcement-form" action="/post_announcement" method="POST">
                    <div class="form-row">
                        <input type="text" class="announcement-title" id="content_title" name="content_title" placeholder="Title" required>
                        <input type="text" id="content" class="write-title" name="content" placeholder="Write announcement..." required>
                        <button type="submit" class="post-title">POST</button>
                    </div>
                </form>
            </div>                                           
            <div class="announcement-table-container">
                <table class="announcement-table">
                    <% if (contents && contents.length > 0) { %>
                        <% contents.forEach(content => { %>
                        <tr>
                            <td>
                                <div class="announcement">
                                    <form action="/delete_content" method="POST" class="delete-content-form">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="user_id" value="<%= content.content_id %>">
                                    </form>
                                    <h1 class="announcement-title-heading"><%= content.content_title %></h1>
                                    <p class="announcement-description">
                                        <span class="short-content"><%= content.content.substring(0, 100) %>...</span>
                                        <span class="full-content" style="display: none;"><%= content.content %></span>
                                    </p>
                                    <button type="button" class="toggle-content-btn" aria-label="Toggle content">Read More</button>
                                </div>
                                <button type="button" 
                                class="toggle-content-btn" 
                                aria-expanded="false" 
                                aria-label="Read more about <%= content.content_title %>">Read More</button>
                        
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="2" class="no-announcements">There are no announcements to display...</td>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>      
        
        <style>
            .container {
                padding: 2rem;
                margin-left: 15rem;
            }

            /* Form Container */
            .form-container {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                padding: 10px;
                background-color: #fff;
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.15);
                border-radius: 10px;
                position: fixed;
                top: 7.5rem;
                left: 50%;
                transform: translateX(-50%);
                width: 50%;
                max-width: 800px;
            }

            .form-row {
                display: flex;
                width: 100%;
                gap: 10px;
                align-items: center;
            }

            .announcement-title, .write-title {
                flex: 1;
                padding: 12px;
                font-size: 16px;
                border: 1px solid #dbdbdb;
                border-radius: 5px;
                outline: none;
                box-sizing: border-box;
                transition: border-color 0.3s ease, box-shadow 0.3s ease;
            }

            .announcement-title::placeholder, .write-title::placeholder {
                color: #999;
                font-size: 14px;
                font-weight: 300;
            }

            .announcement-title:focus, .write-title:focus {
                border-color: #F9A602;
                box-shadow: 0 0 8px rgba(249, 166, 2, 0.4);
            }

            .post-title {
                padding: 12px 20px;
                font-size: 16px;
                font-weight: bold;
                color: #fff;
                background-color: #F9A602;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s ease, transform 0.2s ease;
            }

            .post-title:hover {
                background-color: #d88c02;
                transform: scale(1.02);
            }

            .post-title:active {
                background-color: #b67102;
                transform: scale(0.98);
            }

            /* Responsiveness for smaller screens */
            @media (max-width: 600px) {
                .form-container {
                    width: 90%;
                }

                .form-row {
                    flex-direction: column; /* Stack items on smaller screens */
                    gap: 10px;
                }
            }


            table {
                margin-top: 100px;
                width: 100%;
                border-spacing: 1rem;
                border-collapse: separate; 
            }

            table td {
                padding: 1rem;
                border: 1px solid #dbdbdb;
                border-radius: 8px;
                background-color: #FFFFFF;
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 1.5rem;
                vertical-align: top;
            }

            .announcement-title-heading  {
                flex: 1;
                margin-bottom: 0.5rem;
                font-size: 18px;
                font-weight: bold;
                color: #333;
            }

            .title-heading {
                color: #F9A602;
                font-size: 20px;
            }

            .description {
                color: #373F41;
                margin: 0.5rem 0;
            }

            .no-announcements {
                text-align: center;
                font-style: italic;
                color: #999;
            }

            .short-content {
                display: inline;
                max-height: 3rem; /* Adjust this value based on your design */
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap; /* Ensures text truncation */
            }


            .short-content, .full-content {
                display: inline;
                transition: all 0.3s ease-in-out;
            }

            .toggle-content-btn {
                background-color: transparent;
                border: none;
                color: blue;
                cursor: pointer;
                text-decoration: underline;
                font-size: 0.9rem;
            }

            .toggle-content-btn:hover {
                color: darkblue;
            }

            .delete-btn {
                outline: none;
                border: none;
                background: none;
                cursor: pointer;
                color: rgb(203, 8, 8);
                font-size: 18px;
                transition: transform 0.2s, color 0.3s;
            }

            .delete-btn:hover {
                color: rgb(255, 0, 0);
                transform: scale(1.1);
            }

            @media (max-width: 600px) {
                .announcement-table-container table {
                    width: 100%;
                    font-size: 12px;
                }

                table td {
                    display: block;
                    width: 100%;
                    margin-bottom: 1rem;
                }

                .delete-btn {
                    align-self: flex-end; 
                }
            }
        </style>
        
        <script>
            document.querySelectorAll('.toggle-content-btn').forEach(button => {
                button.addEventListener('click', function () {
                    const container = this.closest('.content-container'); // Adjust class to your container element
                    const shortContent = container.querySelector('.short-content');
                    const fullContent = container.querySelector('.full-content');
        
                    if (shortContent.style.display === 'none') {
                        shortContent.style.display = '';
                        fullContent.style.display = 'none';
                        this.textContent = 'Read More';
                        this.setAttribute('aria-expanded', 'false');
                    } else {
                        shortContent.style.display = 'none';
                        fullContent.style.display = '';
                        this.textContent = 'Read Less';
                        this.setAttribute('aria-expanded', 'true');
                    }
                });
            });
        
            // Handle delete button functionality
            document.querySelectorAll('.delete-btn').forEach(button => {
                button.addEventListener('click', function () {
                    const form = this.closest('td').querySelector('form');
                    if (confirm('Are you sure you want to delete this announcement?')) {
                        form.submit();
                    }
                });
            });
        </script>        
    </body>
</html>