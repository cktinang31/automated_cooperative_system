<!DOCTYPE html>
<html lang="en">
    <%- include("managerhead.ejs") %>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet"> 
    <body>
        <%- include("managerheader.ejs") %>
        <%- include("managersidebar.ejs") %>

        <div class="container">
            <table>
                <thead>
                    <tr>
                        <th>Requested Id</th>
                        <th>Transaction Type</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (transactions.length > 0) { %>
                        <% transactions.forEach(trans => { %>
                            <tr>
                                <td><%= trans.id %></td>
                                <td>
                                    <% if (trans.type === 'CBU Transactions') { %>
                                        <%= trans.type %> - <%= trans.transaction_type %>
                                    <% } else if (trans.type === 'Savings Transaction') { %>
                                        <%= trans.type %> - <%= trans.transaction_type %>
                                    <% } else if (trans.type === 'Loan Application') { %>
                                        <%= trans.type %> 
                                    <% } else if (trans.type === 'Loan Payment') { %>
                                        <%= trans.type %> 
                                    <% } %>
                                </td>
                                <td>
                                    <% if (trans.status === 'approved') { %>
                                        <i class='bx bx-check' style="color:green"></i>
                                    <% } else if (trans.status === 'pending') { %>
                                        <i class='bx bx-loader-alt' style="color:orange"></i>
                                    <% } else { %>
                                        <i class='bx bx-x' style="color:red"></i>
                                    <% } %>
                                </td>
                                <td><%= new Date(trans.date).toLocaleDateString() %></td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4">No transactions</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <style>
            .container {
                margin-top: 50px;
                margin-left: 15%;
                margin-right: 30px;
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
                border-radius: 8px;
            }

            table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 10px;
            }

            thead {
                background-color: #373f41;
                color: white;
            }

            th, td {
                padding: 12px 15px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            th {
                font-weight: bold;
                text-transform: uppercase;
            }

            tbody tr:hover {
                background-color: #f1f1f1;
            }

            tbody td {
                color: #333;
            }

            tbody tr:last-child td {
                border-bottom: none;
            }

            tbody tr td i {
                font-size: 16px;
                vertical-align: middle;
            }

            tbody tr td[colspan="4"] {
                text-align: center;
                font-style: italic;
                color: #888;
            }

            .table-icon {
                font-size: 16px;
            }

            .container h2 {
                margin-bottom: 10px;
                text-align: center;
                color: #007bff;
            }

        </style>

    </body>
</html>