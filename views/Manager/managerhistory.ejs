<!DOCTYPE html>
<html lang="en">
    <%- include("managerhead.ejs") %>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet"> 
    <body>
        <%- include("managerheader.ejs") %>
        <%- include("managersidebar.ejs") %>

        <div class="container">
            <div class="table-wrapper">
                <table>
                    <thead>
                        <tr>
                            <th>Requested Id</th>
                            <th>Transaction Type</th>
                            <th>Status</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (transactions.length > 0) { %>
                            <% transactions.forEach(trans => { %>
                                <tr>
                                    <td><%= trans.id %></td>
                                    <td>
                                        <% if (trans.type === 'CBU Transactions') { %>
                                            <%= trans.type %> - <%= trans.transaction_type %>
                                        <% } else if (trans.type === 'Savings Transaction') { %>
                                            <%= trans.type %> - <%= trans.transaction_type %>
                                        <% } else if (trans.type === 'Loan Application') { %>
                                            <%= trans.type %> 
                                        <% } else if (trans.type === 'Loan Payment') { %>
                                            <%= trans.type %> 
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (trans.status === 'approved') { %>
                                            <i class='bx bx-check' style="color:green"></i>
                                        <% } else if (trans.status === 'pending') { %>
                                            <i class='bx bx-loader-alt' style="color:orange"></i>
                                        <% } else { %>
                                            <i class='bx bx-x' style="color:red"></i>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(trans.date).toLocaleDateString() %></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4">No transactions</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <style>
            .container {
                margin-top: 1px;
                margin-left: 13.2%;
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
                border-radius: 5px;
                overflow: hidden;
            }

            .table-wrapper {
                max-height: 87vh; 
                overflow-y: auto; 
            }

            table {
                width: 100%;
                border-collapse: collapse;
            }

            thead {
                background-color: #373f41;
                color: white;
            }

            th, td {
                padding: 12px 15px;
                text-align: left;
                border-bottom: 1px solid #ddd;
                border: 1px solid #ddd;
            }

            th {
                font-weight: bold;
                text-transform: uppercase;
                position: sticky;
                top: 0;
                z-index: 2;
                background-color: #373f41;
            }

            tbody {
                display: table-row-group;
            }

            tr {
                display: table-row;
            }

            tbody tr:hover {
                background-color: #f1f1f1;
            }

            tbody td {
                color: #333;
            }

            tbody tr:last-child td {
                border-bottom: none;
            }

            tbody tr td i {
                font-size: 16px;
                vertical-align: middle;
            }

            tbody tr td[colspan="4"] {
                text-align: center;
                font-style: italic;
                color: #888;
            }

            .table-icon {
                font-size: 16px;
            }

            .container h2 {
                margin-bottom: 10px;
                text-align: center;
                color: #007bff;
            }
        </style>
    </body>
</html>