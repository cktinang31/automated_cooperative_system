<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KaCoop | <%=title %></title>
    <link rel="stylesheet" href="/css/announcement.css">
</head>
<body>
    <nav>
        <div class="site-title">
            <h1>CTU-AC COOPERATIVE SYSTEM</h1>
        </div>
        <div class="member-title">
            <h1>Member</h1>
        </div>
        <div class="home-icon">
            <a href="/">
                <img src="/svg/icons8-home.svg" alt="Home Icon">
            </a>
        </div>
    </nav>

    <div class="main-content" id="main-content" style="display: none;">
        <div class="content-wrapper">
            <div class="announcement-section">
                <h1>Create Announcement</h1>
                <form id="create-announcement-form" action="/post_announcement" method="POST">
                    <div class="form-group">
                        <label for="announcement-title">Title:</label>
                        <input type="text" id="content_title" name="content_title" required>
                    </div>
                    <div class="form-group">
                        <label for="announcement-content">Content:</label>
                        <textarea id="content" name="content" rows="10" required></textarea>
                    </div>
                    <div class="button-group">
                        <button type="submit">Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="announcement-section" id="announcement-section">
        <img src="/images/marketing.png" alt="Megaphone Icon" class="adjusted">
        <h1>Announcement</h1>
    </div>
    <a href="#" class="add-icon" id="add-button">
        <img src="/images/task-list-add.svg" alt="Add Icon">
    </a>

    <script>
        // Attach event listener to the "Add" button
        document.getElementById("add-button").addEventListener("click", function() {
            // Hide the "Announcement" section
            document.getElementById("announcement-section").style.display = "none";
            // Show the create announcement section
            document.getElementById("main-content").style.display = "block";
            // Remove existing content
            document.body.innerHTML = '';
            // Load content from the second HTML file
            fetch('path_to_second_html_file.html')
                .then(response => response.text())
                .then(html => {
                    document.body.innerHTML = html;
                });
        });
    </script>
</body>
</html>
