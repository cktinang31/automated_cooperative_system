<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main<%=title %></title>
    <link rel="stylesheet" href="/css/requests.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>

<nav>
    <div class="site-title">
        <h1>CTU-AC COOPERATIVE SYSTEM</h1>
    </div>
    <div class="nav-content">
        <div class="member-title">
            <h1>Manager</h1>
        </div>
        <div class="home-icon">
            <a href="/">
                <img src="/svg/icons8-home.svg" alt="Home Icon">
            </a>
        </div>
    </div>
</nav>

<!-- Centering the h2 element -->
<h2>Membership Requests</h2>

<table id="table">
  <tr>
    <th>Request ID</th>
    <th>Details</th>
    <th>Date</th>
  </tr>
  <tr>
    <td>00111</td>
    <td>Jay Sumaway has sent a membership application.<br><span id="timestamp1"></span></td>
    <td>04-15-2024</td>
  </tr>
</table>

<script>
    // Function to get current timestamp
    function getTimestamp() {
        const now = new Date();
        const timestamp = now.toLocaleString();
        return timestamp;
    }

    // Update timestamp for each row
    document.addEventListener("DOMContentLoaded", function() {
        const table = document.getElementById("table");
        const rows = table.getElementsByTagName("tr");

        for (let i = 1; i < rows.length; i++) {
            const detailsCell = rows[i].getElementsByTagName("td")[1];
            const timestampSpan = document.createElement("span");
            timestampSpan.textContent = " (" + getTimestamp() + ")";
            detailsCell.appendChild(timestampSpan);
        }
    });
</script>

</body>
</html>
