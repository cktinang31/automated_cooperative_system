<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KaCoop | <%=title %></title>
    <link rel="stylesheet" href="/css/requests.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>

    <nav class="navbar">
        <div class="site-title">
            <h1>KACooP</h1>
            <span>Manager<i class="fas fa-home"></i></span>
        </div>
    </nav>   

<h2>Savings Deposit/Withdraw Requests</h2>

<table id="table">
    <thead>
        <tr>
            <th>Details</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        <% if (savtransaction.length > 0) { %>
            <% savtransaction.forEach(savtrans => { %>
                <tr data-application-id="<%= savtrans.savtransaction_id %>">
                    <td><%= savtrans.User.fname %> <%= savtrans.User.lname %> has sent a <%= savtrans.transaction_type %> request.</td>
                    <td><%= savtrans.date_sent %></td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="2">No Requests at the moment...</td>
            </tr>
        <% } %>   
    </tbody>
</table>

<script>
    document.querySelectorAll('tr[data-application-id]').forEach(row => {
  row.addEventListener('click', function() {
      
      const applicationId = this.getAttribute('data-application-id');
      
      
      const destinationUrl = '/Manager/loanrequestupdate/' + applicationId; 
      window.location.href = destinationUrl;
  });
});

</script>

<script>
    // Function to get current timestamp
    function getTimestamp() {
        const now = new Date();
        const timestamp = now.toLocaleString();
        return timestamp;
    }

    // Update timestamp for each row
    document.addEventListener("DOMContentLoaded", function() {
        const table = document.getElementById("table");
        const rows = table.getElementsByTagName("tr");

        for (let i = 1; i < rows.length; i++) {
            const detailsCell = rows[i].getElementsByTagName("td")[1];
            const timestampSpan = document.createElement("span");
            timestampSpan.textContent = " (" + getTimestamp() + ")";
            detailsCell.appendChild(timestampSpan);
        }
    });
</script>

</body>
</html>
