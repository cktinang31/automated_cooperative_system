<!DOCTYPE html>
<html lang="en">
    <%- include("head.ejs") %> 
  <body>
    <%- include("header.ejs") %>
    <%- include("sidebar_mem.ejs") %>
    <div class="container">
      <div class="balances">
        <!-- Savings Section -->
        <div class="balance-card savings">
          <h3>Savings</h3>
          <% savings.forEach(saving => { %>
            <p class="amount" id="savings-amount">Php <%= saving.amount %>.00</p>
            <p class="interest" id="interest-amount">Interest: Php <%= (saving.amount * 0.002).toFixed(2) %></p>
            <p class="total-revenue" id="total-revenue-amount">Total Revenue: Php <%= (saving.amount + (saving.amount * 0.002)).toFixed(2) %></p>
          <% }) %>
        </div>
        
        <!-- CBU Section -->
        <div class="balance-card cbu">
          <h3>CBU</h3>
          <% cbu.forEach(item => { %>
            <p class="amount" id="amount">Php <%= item.amount %>.00</p>
            <p class="interest" id="interest-amount">Interest: Php <%= (item.amount * 0.02).toFixed(2) %></p>
            <p class="total-revenue" id="total-revenue-amount">Total Revenue: Php <%= (item.amount + (item.amount * 0.02)).toFixed(2) %></p>
          <% }) %>
        </div>
      </div>

      <!-- Transaction Form -->
      <form action="/handle_transaction_submission" method="post" class="transaction-form">
        <h4>Request a Transaction</h4>
        <div class="form-fields">
            <select name="fund-type" id="fund-type" required>
                <option value="" disabled selected hidden>Fund Type</option>
                <option value="savings">Savings</option>
                <option value="cbu">CBU</option>
            </select>
            <select name="transaction_type" id="transaction-type" required>
                <option value="" disabled selected hidden>Transaction Type</option>
                <option value="deposit">Deposit</option>
                <option value="withdraw">Withdrawal</option>
            </select>
            <select name="payment-mode" id="payment-mode" required>
                <option value="" disabled selected hidden>Mode of Payment</option>
                <option value="cash">Cash</option>
                <option value="credit-card">Credit Card</option>
                <option value="debit-card">Debit Card</option>
                <option value="gcash">Gcash</option>
                <option value="maya">Maya</option>
                <option value="paypal">Paypal</option>
            </select>
        </div>
    
        <!-- Amount Entry Form -->
        <table class="form-table">
            <tr>
                <td>Enter Amount</td>
                <td>
                    <input type="number" class="form-input" name="amount" min="0" step="1" required>
                </td>
            </tr>
        </table>
        <button type="submit" class="confirm-button">Confirm</button>
    </form>
    </div>
  </body>

  <style>
    .container {
      margin-top: 5%;
    }

    h3 {
      color: #F9A602;
      font-size: 30px;
      margin-bottom: 10px;
    }

    .balances {
      display: flex;
      justify-content: space-evenly;
      margin-bottom: 30px;
    }

    .balance-card {
      background-color: #373F41;
      color: #ffd200;
      padding: 20px;
      border-radius: 8px;
      width: 45%;
      text-align: center;
    }

    .balance-card h3 {
      margin: 0;
      font-size: 18px;
    }

    .balance-card .amount {
      font-size: 24px;
      margin: 10px 0;
    }

    .transaction-form {
      margin-bottom: 20px;
    }

    .transaction-form h4 {
      margin-bottom: 15px;
      font-weight: normal;
    }

    .form-fields {
      display: flex;
      gap: 15px;
      margin-bottom: 20px;
    }

    .form-fields select {
      width: 30%;
      padding: 10px;
      font-size: 16px;
      border-radius: 5px;
      border: 1px solid #000;
    }

    .confirm-button {
      background-color: #333;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      width: 20%;
      cursor: pointer;
    }

    .confirm-button:hover {
      background-color: #555;
    }
  </style>
</html>
