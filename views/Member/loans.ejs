<!DOCTYPE html>
<html lang="en">
    <%- include("head.ejs") %>
    <link rel="stylesheet" href="/css/loan.css">
 
    <body>
        <%- include("header.ejs") %>
        <%- include("sidebar_mem.ejs") %>
 
        <div class="container">
            <div class="apply-loan">
                <form action="/apply_loan" method="post" oninput="calculateMonthlyPayment()">
                    <div class="form-container">
                        <div class="loans">
                            <div class="form-group">
                                <input type="hidden" id="user_id" name="user_id" value="<%= user.user_id %>">
                            </div>
                   
                            <div class="loan-type">
                                <p>
                                    Loan Type
                                </p>
                                    
                                <div class="loan-options">
                                    <label class="radio-label">
                                        <input type="radio" class="radio-input" id="loan_type_regular" name="loan_type" value="regular" required>
                                        <span class="radio-text">Regular Loan</span>
                                    </label>
                                    <label class="radio-label">
                                        <input type="radio" class="radio-input" id="loan_type_medical" name="loan_type" value="medical" required>
                                        <span class="radio-text">Medical Loan</span>
                                    </label>
                                    <label class="radio-label">
                                        <input type="radio" class="radio-input" id="loan_type_emergency" name="loan_type" value="emergency" required>
                                        <span class="radio-text">Emergency Loan</span>
                                    </label>
                                </div>
                                
                                     
                            </div>
           
                            <div class="amount">
                                <div class="amount-container">
                                    <p>
                                       Amount
                                    </p>
                                    <input type="number" class="number" id="amount" name="amount" step="0.01" required>
                                </div>
                                <div class="amount-container">
                                    <p>
                                        Interest Rate %
                                    </p>
                                    <input type="number" class="number" id="interest" name="interest" step="0.01" required>
                                </div>
           
                               
                            </div>
                           
                            <div class="terms">
                                <div class="term-container">
                                    <p>
                                        Loan Term
                                    </p>
                                    <select id="loan_term" name="loan_term" required>
                                        <option value="6 months">6 months</option>
                                        <option value="12 months">12 months</option>
                                        <option value="18 months">18 months</option>
                                        <option value="24 months">24 months</option>
                                    </select>
                                </div>
                                <div class="term-container">
                                    <p>
                                        Payment per Collection
                                    </p>
                                    <div class="payment_per_month" id="monthly_payment">
                                    </div>
                                </div>
                            </div>
                            <button class="confirm-button" type="submit">Apply Loan</button>
                        </div>
     
    
                    </div>
                </form>
            </div>


            <div class="current-loan">
                    <table id="table">
                        <thead>
                            <tr>
                                <th>Loan ID</th>
                                <th>Loan Type</th>
                                <th>Amount</th>
                                <th>Interest Rate</th>
                                <th>Loan Term</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                            </tr>
                        </thead>
                        <tbody>
           
                <% if (loans.length > 0) { %>
                <% loans.forEach(loan => { %>
                  <tr data-loan-id="<%= loan.loan_id %>">
                    <td><%= loan.loan_id %></td>
                    <td>
                      <% if (loan.loan_type === 'medical') { %>
                        <p>Medical Loan</p>
                      <% } else if (loan.loan_type === 'emergency') { %>
                        <p>Emergency Loan</p>
                      <% } else { %>
                        <p>Regular Loan</p>
                      <% } %>
                    </td>
                    <td><%= loan.start_date %></td>
                    <td><%= loan.end_date %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr> 
                  <td colspan="8">No Loan at the moment. Fill up the form at the left if you want to apply.</td>
                </tr>
              <% } %>
             
           
                    </table>    

            </div>
           
                    
              
               
            
        </div>
       
        
       
        <script>

            
            document.querySelectorAll('tr[data-loan-id]').forEach(row => {
        row.addEventListener('click', function() {
           
            const loanId = this.getAttribute('data-loan-id');
           
           
            const destinationUrl = '/Member/regular_loan/' + loanId;
            window.location.href = destinationUrl;
        });
        });

            function calculateMonthlyPayment() {
                    const amount = parseFloat(document.getElementById('amount').value);
                    const loanTerm = parseFloat(document.getElementById('loan_term').value.split(' ')[0]);
                    const interest = parseFloat(document.getElementById('interest').value);
                    
                    const monthlyInterestRate = interest / 12;
                    const numberOfPayments = loanTerm;
                    
                    const monthlyPayment = (amount * monthlyInterestRate * Math.pow(1 + monthlyInterestRate, numberOfPayments)) /
                        (Math.pow(1 + monthlyInterestRate, numberOfPayments) - 1);
                    
                    document.getElementById('monthly_payment').textContent = 'PHP'+''+ monthlyPayment.toFixed(2);
                }

        </script>
 

        </div>
    </body>
 
 
</html>
 