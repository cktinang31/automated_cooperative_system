<body>
    <h2>Current Loan</h2>

<table id="table">
    <thead>
        <tr>
            <th>Loan ID</th>
            <th>Type</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
    </thead>
    <tbody>
      <% if (loans.length > 0) { %>
        <% loans.forEach(loan => { %>
          <tr data-loan-id="<%= loan.loan_id %>">
            <td><%= loan.loan_id %></td>
            <td>
              <% if (loan.loan_type === 'medical') { %>
                <p>Medical Loan</p>
              <% } else if (loan.loan_type === 'emergency') { %>
                <p>Emergency Loan</p>
              <% } else { %>
                <p>Regular Loan</p>
              <% } %>
            </td>
            <td><%= loan.start_date %></td>
            <td><%= loan.end_date %></td>
        
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="8">No Loan at the moment...</td>
        </tr>
      <% } %>
      
    <%- include("head.ejs") %>
        <%- include("header.ejs") %>
        <%- include("sidebar_mem.ejs") %>
        </tb
        
        <div class="container">
              <% if (contents.length > 0) { %>
                <% contents.forEach(content => { %>
                <div class="announcement-container">
                    <h3 class="announcement-title"><%= content.content_title %></h3>
                    <p><%= content.content %></p>
                
                </div>   </div>
                <% }) %>
            <% } else { %>
                <p>There are no announcements to display...</p>
            <% } %>

            <div class="welcome-container">
                <h3 class="welcome-title">Welcome</h3>
            </div>

            <div class="coopfunds-container">
                <h3>Coop Funds</h3>
            </div>

            <div class="funds-container">
                
                <li>
                    <a href="#" class="funds-btn">
